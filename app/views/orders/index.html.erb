<%
   orders_exist = (@order_dates.count > 0)
%>
<div class="row">
  <div class="col-sm-2">
    <p>
      <%= link_to "New Delivery Order", new_order_path(date: @selected_date), class: "btn btn-success" %>
    </p>
    <% if orders_exist %>
        <h3>Delivery Dates:</h3>
        <div class="list-group" align="center">
          <% @order_dates.each do |order| %>
              <%= link_to order.desired_date.to_s, orders_path(selected_date: order.desired_date), class: (order.desired_date.to_s == @selected_date ? "list-group-item active" : "list-group-item") %>
          <% end %>
        </div>
        <p>
          <%= link_to "Upload Orders", "orders/upload_orders", class: "btn btn-success" %>
        </p>
    <% end %>
  </div>
  <div class="col-sm-10">
    <% if !orders_exist %>
        <h4>
          No orders exist in the system
        </h4>
        <p>
          Please upload CSV file containing orders or create new order using "<b>New Delivery Order</b>" button
        </p>
        <%= render partial: "upload_orders" %>
    <% else %>
        <%
           m_load = @morning_load.available_volume
           n_load = @afternoon_load.available_volume
           e_load = @evening_load.available_volume
        %>

        <% if !(@errors.nil? || @errors.empty?) %>
            <%= render "errors", locals: {errors: @errors} %>
        <% end %>


        <div class="row">
          <div class="col-sm-8">
            <table class="table">
              <thead>
                <tr>
                    <th>Delivery time frame:</th>
                    <th><%= link_to @morning_load.name, edit_load_path(@morning_load) %></th>
                    <th><%= link_to @afternoon_load.name, edit_load_path(@afternoon_load) %></th>
                    <th><%= link_to @evening_load.name, edit_load_path(@evening_load) %></th>
                  </tr>
              </thead>
              <tbody>
                <tr>
                    <th>Available volume:</th>
                    <td><%= m_load %></td>
                    <td><%= n_load %></td>
                    <td><%= e_load %></td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>

          <%= form_tag ({action: :set_load}) do %>

              <%= submit_tag("Save Orders Distribution", class: "btn btn-success") %>
              <%= hidden_field_tag(:delivery_date, @selected_date) %>

              <table class="table table-hover">
                <thead>
                    <tr>
                      <th>M</th>
                      <th>N</th>
                      <th>E</th>
                      <th>Action</th>
                      <th>#</th>
                      <th><span class="glyphicon glyphicon-time" title="Client's desired delivery time frame"></span></th>
                      <th>City</th>
                      <th>Address</th>
                      <th>Purchase Order</th>
                      <th>Volume</th>

                      <th>Client Name</th>
                      <th>Type</th>
                    </tr>
                </thead>
                <tbody>
                    <%= render partial: "orders", locals: {orders: @unassigned_orders} %>
                    <%= render partial: "orders", locals: {orders: @morning_orders} %>
                    <%= render partial: "orders", locals: {orders: @afternoon_orders} %>
                    <%= render partial: "orders", locals: {orders: @evening_orders} %>
                </tbody>
              </table>
          <% end %>
    <% end %>
  </div>
</div>

