<%= render "common/errors", locals: {errors: @errors} %>

<%= form_tag({action: :signin}, role: "form", class: "form-horizontal") do %>
  <div class="form-group">
    <%= label_tag(:login, 'Login', class: "control-label col-sm-2") %>
    <div class="col-sm-4">
      <%= text_field_tag(:login, nil, class: "form-control") %>
    </div>
  </div>
  <div class="form-group">
    <%= label_tag(:password, 'Password', class: "control-label col-sm-2") %>
    <div class="col-sm-4">
      <%= password_field_tag(:password, nil, class: "form-control") %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= submit_tag("Sign in", class: "btn btn-success") %>
    </div>
  </div>
<% end %>